<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#202020"
        android:text="TextView"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#999999"
        android:text="TextView"
        android:layout_below="@+id/name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/info"
            android:src="@drawable/info_off"
            android:background="@drawable/grey_round_stroke"
            android:padding="8dp"
            android:layout_marginRight="15dp"
            android:adjustViewBounds="false"
            android:visibility="gone"/>
        <!--<ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/settings"
            android:src="@drawable/gear"
            android:background="@drawable/grey_round_stroke"
            android:padding="8dp"
            android:layout_marginRight="15dp"
            android:adjustViewBounds="false"/>-->
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/delete"
            android:src="@drawable/delete"
            android:background="@drawable/grey_round_stroke"
            android:padding="8dp"
            android:adjustViewBounds="false"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/additionalLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="2"
        android:layout_below="@+id/description"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/box_border"
        android:layout_marginTop="10dp"
        android:visibility="gone">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:text="@string/phone"
                android:id="@+id/phone"
                android:textColor="#555555"
                android:textStyle="bold"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>
            <TextView
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:text="val"
                android:id="@+id/phoneValue"
                android:textColor="#555555"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@id/phone"/>
            <TextView
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:text="@string/email"
                android:id="@+id/email"
                android:textColor="#555555"
                android:layout_below="@+id/phone"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textStyle="bold"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:text="val"
                android:id="@+id/emailValue"
                android:textColor="#555555"
                android:layout_below="@+id/phone"
                android:layout_toRightOf="@id/email"
                android:layout_marginTop="10dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:text="@string/rfid"
                android:id="@+id/rfid"
                android:textColor="#555555"
                android:textStyle="bold"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>
            <TextView
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:text="val"
                android:id="@+id/rfidValue"
                android:textColor="#555555"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@id/rfid"/>
            <TextView
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:text="@string/device"
                android:id="@+id/device"
                android:textColor="#555555"
                android:textStyle="bold"
                android:layout_below="@+id/rfidValue"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:text="val"
                android:id="@+id/deviceValue"
                android:textColor="#555555"
                android:layout_below="@+id/rfid"
                android:layout_toRightOf="@id/device"
                android:layout_marginTop="10dp"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>